{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}

    <div class="container  mt-5">
        <div class="row text-center">
            <div class="row justify-content-center align-items-baseline">
                <h3 class="font-weight-primary mb-3 ">  {{ activity.name }}</h3>
                <div class="col-md-12">
                    <div class="card mb-4">

                        <div class="card-header">
                            <h5 class="float-left text-primary">

                                <a href="#"> {{ activity.category.name }} </a></h5>

                            <p class="float-right text-primary">{{ activity.createdAt ? activity.createdAt|date('Y-m-d') :'' }}</p>
                        </div>
                        <div class="card-body">
                            <div class="card-img">

                            {% for picture in activity.pictures %}
                                <img src="{{ asset('/uploads/' ~ picture.filename) }}"
                                     alt="pictures" width="100%" class="mb-2">
                            {% endfor %}
                            </div>
                            <div class="card-text">
                                <div class="p-3 m-3">
                                    {{ activity.description | raw }}
                                </div>
                            </div>

                            <div class="d-flex justify-content-between ">
                                <p class="text-success p-1"><i class="fas fa-user"></i> {{ activity.user.pseudo }}</p>
                                <p class="text-primary m-1">
                                    {% for publics in activity.publics %}
                                        {{ publics.name }}
                                    {% endfor %}
                                </p>
                                <p class="text-warning">
                                    Etat: {{ activity.state.name }}
                                </p>
                            </div>
                        </div>
                        <hr>
                        <div>
                            <div class="d-flex justify-content-around  mb-2">
                                <a href="{{ path('activity_index') }}"
                                   class="btn btn-md btn-outline-secondary"><i class="fas fa-arrow-circle-left"></i></a>

                                <a href="{{ path('activity_edit', {'id': activity.id}) }}"
                                   class="btn btn-md btn-outline-warning"><i class="fas fa-pen-square"></i></a>

                                {{ include('activity/_delete_form.html.twig') }}

                                <a href="#" class="btn btn-sm btn-outline-primary" data-toggle="modal" data-target="#exampleModal"><i class="fas fa-comments"></a></i></a>
                            </div>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Rediger un avis sur cette
                                                activité</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="card mb-2">
                                                <div class="card-header">
                                                    Rédigez un avis sur cette activité!
                                                </div>
                                                <div class="card-body">
                                                    {{ form_start(formComment) }}
                                                    <small>{{ form_widget(formComment) }}</small>
                                                    <button class="btn-sm btn-primary float-right">Envoyer</button>
                                                    {{ form_end(formComment) }}
                                                </div>
                                                {% for comment in activity.comments %}
                                                    <div class="card mb-2">
                                                        <div class="card-header d-flex justify-content-around ">
                                                            Rédigé par {{ activity.user.pseudo}}
                                                            {{ activity.comments.count }}
                                                        </div>
                                                        <div class="card-body">
                                                            {% for comment in activity.comments %}
                                                                {{ comment.message}}
                                                            {% endfor %}

                                                        </div>
                                                        <div class="card-footer">
                                                            <form action="">
                                                                <div class="form-group">
                                                                    <label for="">Message</label>
                                                                    <input type="text" class="form-control" placeholder="Répondre à cet avis...">
                                                                </div>
                                                                <button class="btn btn-sm btn-primary float-right">Répondre</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
