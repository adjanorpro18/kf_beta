{% extends 'base.html.twig' %}

    {% block title %}Mes activites {% endblock %}

    {% block body %}
        <div class="container  mt-5">
            <div class="row text-center">
                <div class="row justify-content-center">
                    <h3 class="font-weight-light mb-3"> Mes Publications</h3>
                    <div class="col-md-12">
                        <div class="card mb-4">
                            {% for pictures in activity.pictures %}
                                <img src="{{ asset('/uploads/images/'~ pictures.filename) }}" alt="pictures"
                                     width="100%" class="bd-placeholder-img card-img-top">
                            {% endfor %}
                            <div class="card-header">
                                <h4 class="float-left">{{ activity.name }} </h4>
                                <p class="float-right">{{ activity.user.pseudo }}</p>
                            </div>
                            <div class="card-body">
                                <div class="card-text">
                                    <div class="p-3 m-3">
                                        {{ activity.description |raw }}
                                    </div>
                                </div>

                                <div class="d-flex justify-content-around ">
                                    <p>
                                        {% for category in activity.category %}
                                            <small>Categorie: {{ category.name }} </small>
                                        {% endfor %}
                                    </p>
                                    <p>
                                        {% for publics in activity.publics %}
                                            <small>Cible: {{ publics.name }} </small>
                                        {% endfor %}
                                    </p>
                                    <p>
                                        <small>Etat: {{ activity.state.name }} </small>
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <div>
                                <div class="d-flex justify-content-around mb-2">
                                    <a href="{{ path('app_index') }}" class="btn btn-sm btn-outline-primary">Retour</a>
                                    <a href="{{ path('activity_edit', {'id': activity.id} ) }}" class="btn btn-sm btn-outline-warning">Modifier</a>
                                    <a href="{{ 'activity_delete' }}" class="btn btn-sm btn-outline-danger">Supprimer</a>
                                    <a href="" class="btn btn-sm btn-outline-success" data-toggle="modal" data-target="#exampleModal">Donner un avis</a>
                                </div>

                                <!-- Modal -->
                                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Rediger un avis sur cette activité</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                {% for comments in activity.comments %}
                                                    {% if not loop.last %} {% endif %}
                                                    <div class="card mb-2">
                                                        <div class="card-header d-flex justify-content-around ">
                                                            Rédigé par {{ activity.user.pseudo}}  -  {{ activity.comments.count }}
                                                        </div>
                                                        <div class="card-body">
                                                            {{ comments.message }}
                                                        </div>
                                                        <div class="card-footer">
                                                            <form action="">
                                                                <div class="form-group">
                                                                    <label for="">Message</label>
                                                                    <input type="text" class="form-control" placeholder="Répondre à cet avis...">
                                                                </div>
                                                                <button class="btn btn-sm btn-primary float-right">Répondre</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                {% endfor %}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
