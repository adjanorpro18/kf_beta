{% extends 'base.html.twig' %}

    {% block title %}Accueil{% endblock %}

{% block main %}
    <div class="container-fluid m-1 p-3"><!--carroussel-->
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <!-- intégrer images -->
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://cdn.shortpixel.ai/client/q_glossy,ret_img/https://comlmkidsandfamily.fr/wp-content/uploads/2020/12/Activites-en-famille-1-1.jpg" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://cdn.shortpixel.ai/client/q_glossy,ret_img/https://comlmkidsandfamily.fr/wp-content/uploads/2020/12/Creator-d-experience-1.jpg" alt="second slide">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://cdn.shortpixel.ai/client/q_glossy,ret_img/https://comlmkidsandfamily.fr/wp-content/uploads/2020/12/Partager-1.jpg" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                    </div>
                </div>
            </div>
            <!-- boutons de contrôle -->
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- fin carroussel--></div>

    </div>


{% endblock %}
