{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block main %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-4">
            You are logged in as {{ app.user.pseudo }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 login-sec">
    <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <br>
    <label for="inputPassword">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html #}

        <div class="checkbox m-3 ">
            <label>
                <input type="checkbox" name="_remember_me"> Se souvenir de moi
            </label>
            <br>
            <a href="{{ path('request_password') }}">Mot de passe oubli√© </a>
        </div>



    <button class="btn btn-lg btn-primary" type="submit">
        Se connecter
    </button>

            </div>
            <img class="d-block img-fluid"
                 src="https://image.freepik.com/vecteurs-libre/heureuse-grande-famille-debout-ensemble-illustration_179970-753.jpg">
        </div>
    </div>
</form>
{% endblock %}
