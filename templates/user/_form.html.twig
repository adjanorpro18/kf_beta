

{% block main %}

<div class="jumbotron fluid d-flex p-4 m-3 w-100 justify-content-center ">

    <div class="col-md-7">
        {{ form_start(form) }}
        <div class="row mb-3">
            <label for="email" class="col-md-4">Email :</label>
            <p class="col-md-5 float-left">{{ form_widget(form.email) }}</p>
        </div>
        <div class="row mb-3">
            <label for="email" class="col-md-4">Mot de passe :</label>
            <p class="col-md-5 float-left">{{ form_widget(form.password) }}</p>
        </div>
        <div class="row mb-3">
            <label for="email" class="col-md-4">Pseudonyme :</label>
            <p class="col-md-5 float-left">{{ form_widget(form.pseudo) }}</p>
        </div>
        <div class="row mb-3">
            <label for="email" class="col-md-4">Profil :</label>
            <p class="col-md-5 float-left">{{ form_widget(form.profile) }}</p>
        </div>

        <div class="row justify-content-around mt-4">
            <button class="btn btn-lg btn-primary mt-3">{{ button_label|default('Valider') }}</button>

        </div>

        {{ form_end(form) }}


    </div>

</div>

{% endblock %}