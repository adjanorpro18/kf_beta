{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block main %}
    <div class="container">

        <div class="row mb-4 align-items-baseline">
            <label class="col-md-4 "></label>
            <i class="fas fa-user fa-4x text-primary justify-content-center "></i>
            <h2 class="ml-3">Compte Ambassadeur {{ user.pseudo }}</h2>
        </div>
        <div class="col-md-12 justify-content-between m-0 p-1">

            <div class="d-flex justify-content-center">
            </div>

            <div class="d-row justify-content-between">
                {{ include('user/_form.html.twig', {'button_class': 'Update'}) }}
                {{ include('user/_delete_form.html.twig', {'button_class': 'Supprimer'}) }}
                <a href="{{ path('app_index') }}" class="btn btn-lg btn-primary">Retour</a>
            </div>

            {% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
                {% for message in messages %}
                    <div class="flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

        </div>

    </div>

{% endblock %}