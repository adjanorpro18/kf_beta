{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}

    <div class="jumbotron justify-content-center p-4 m-4">
        <h1>{{ user.pseudo }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.pseudo }}</td>
            </tr>
            </tbody>
        </table>

        <div class=" justify-content-around">
            <a href="{{ path('user_index') }}"><i class="fas fa-arrow-circle-left"></i></a>

            <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>

            {{ include('user/_delete_form.html.twig') }}
        </div>

    </div>


{% endblock %}
